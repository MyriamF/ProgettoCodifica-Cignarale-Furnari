            <div xml:id="glossary">              <!--Glossario -->
              <list type="gloss">
                <item>
                  <term xml:id="mot">Mot</term>
                  <gloss target="#mot">
                  unità lessicale,segno linguistico riconducibile a uno o più contenuti espressivi
                  </gloss>
                </item>
                <item>
                  <term xml:id="histoire">Histoire appliquée à la langue</term>
                  <gloss target="#histoire">
                  descrizione diacronica delle trasformazioni che le lingue hanno conosciuto nel tempo
                  </gloss>
                </item>
                <item> 
                  <term xml:id="idées">Idées</term>
                  <gloss target="#idées">
                  principio determinante interpretativo o programmatico
                  </gloss>
                </item>
                <item>
                  <term xml:id="langue">Langue</term>
                  <gloss target="#idées">
                   sistema di segni che formano il codice di un idioma
                  </gloss>
                </item>
                <item>
                  <term xml:id="differenciation">Différenciation</term>
                  <gloss target="#differencie">
                   variazione delle caratteristiche di una lingua
                  </gloss>
                </item>
                <item>
                  <term xml:id="differencie">Différenciation - Diversification</term>
                  <gloss target="#differencie">
                   variazione delle caratteristiche di una lingua
                  </gloss>
                </item>
                <item>
                  <term xml:id="Temps/espace"> Temps - Espace</term>
                  <gloss target="#differencie">
                   fattori di variazione di una lingua
                  </gloss>
                </item>
                <item>
                  <term xml:id="identique"> Identité</term>
                  <gloss target="#differencie">
                   la costruzione linguistica dell'appartenenza ad uno o più gruppi o categorie sociali
                  </gloss>
                </item>
                <item>
                  <term xml:id="distance"> Distance géographique</term>
                  <gloss target="#distance">
                   fattore che determina il cambiamento della lingua nello spazio
                  </gloss>
                </item>
                <item>
                  <term xml:id="continuite"> Continuité</term>
                  <gloss target="#continuite">
                   estensione non interrotta nel tempo e nello spazio
                  </gloss>
                </item>

                



